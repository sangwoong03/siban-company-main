{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es2016",
    "outDir": "dist",
    "module": "commonjs",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": { "/src/*": ["/src/*"] }
  }
}